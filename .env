# Data Lens AI Authentication Configuration
# Copy this to .env and update with your values

# Database Configuration
AUTH_DB_PATH=app/database/auth.db

# Security Settings
SECRET_KEY=your-secret-key-here-change-this-in-production
CSRF_SECRET_KEY=another-secret-key-for-csrf-protection

# Session Configuration  
SESSION_TIMEOUT_HOURS=24
SESSION_CLEANUP_INTERVAL_HOURS=1

# Email Configuration (for production)
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_USE_TLS=true

# OAuth Configuration (optional)
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
MICROSOFT_CLIENT_ID=your-microsoft-client-id
MICROSOFT_CLIENT_SECRET=your-microsoft-client-secret

# Admin Configuration
DEFAULT_ADMIN_EMAIL=admin@yourdomain.com
DEFAULT_ADMIN_PASSWORD=change-this-immediately

# Rate Limiting
LOGIN_RATE_LIMIT=5
LOGIN_RATE_WINDOW_MINUTES=15
REGISTRATION_RATE_LIMIT=3
REGISTRATION_RATE_WINDOW_MINUTES=60

# Logging
LOG_LEVEL=INFO
LOG_FILE=app/logs/auth.log
